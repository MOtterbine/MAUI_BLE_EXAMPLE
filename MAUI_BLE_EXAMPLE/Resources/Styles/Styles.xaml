    <Style x:Key="transparent-button"  TargetType="Button">
        <Setter Property="TextColor" Value="#404040"></Setter>
        <Setter Property="Background" Value="#00000000"></Setter>
        <Setter Property="BorderColor" Value="#88000000"></Setter>
        <Setter Property="FontAttributes" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="{OnPlatform Large, WinUI=Medium}"></Setter>
        <Setter Property="BorderWidth" Value="2"></Setter>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">

                    <VisualState x:Name="PointerOver" >
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="#444"></Setter>
                            <Setter Property="Background" Value="#000F0000"></Setter>
                            <Setter Property="BackgroundColor" Value="#000F0000"></Setter>
                            <Setter Property="BorderColor" Value="#88000000"></Setter>
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState x:Name="Focused" >
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="#444"></Setter>
                            <Setter Property="Background" Value="#000F0000"></Setter>
                            <Setter Property="BackgroundColor" Value="#000F0000"></Setter>
                            <Setter Property="BorderColor" Value="#88000000"></Setter>
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="#44000000"></Setter>
                            <Setter Property="Background" Value="#22000000"></Setter>
                            <Setter Property="BackgroundColor" Value="#22000000"></Setter>

                            <Setter Property="BorderColor" Value="#44000000"></Setter>
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Background" Value="#33000000"></Setter>
                            <Setter Property="BackgroundColor" Value="#33000000"></Setter>
                            <Setter Property="BorderColor" Value="#FFDFDFDF"></Setter>
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState x:Name="Normal" >
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="#444"></Setter>
                            <Setter Property="Background" Value="#00000000"></Setter>
                            <Setter Property="BackgroundColor" Value="#00000000"></Setter>
                            <Setter Property="BorderColor" Value="#88000000"></Setter>
                        </VisualState.Setters>
                    </VisualState>



                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>


